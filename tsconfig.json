{
  "compilerOptions": {
    "target": "ESNext",             // Use ESNext for modern JS syntax
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",              // ES Modules
    "moduleResolution": "node",      // Use Node.js resolution strategy
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] }
  },
 "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "prisma/data/dummydata.ts"],
  "exclude": ["node_modules"]
}
