generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String?   // optional banaya
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Order {
  id            Int         @id @default(autoincrement())
  name          String
  address       String
  phone         String
  paymentMethod String
  total         Float
  createdAt     DateTime
  status        String      @default("pending")  // ðŸ‘ˆ default add
  items         OrderItem[]
}


model OrderItem {
  id          Int     @id @default(autoincrement())
  order       Order   @relation(fields: [orderId], references: [id])
  orderId     Int
  productId   Int
  productName String
  price       Float
  quantity    Int
  total       Float

}
